{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "jsx": "react",
    "reactNamespace": "JsCode",
    "target": "es5",
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.*"
  ]
}
